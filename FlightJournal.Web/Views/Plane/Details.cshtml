@model FlightJournal.Web.Models.Plane

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Plane</legend>

    <div class="display-label">Registration</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Registration)
    </div>

    <div class="display-label">CompetitionId</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CompetitionId)
    </div>

    <div class="display-label">Seats</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Seats)
    </div>

