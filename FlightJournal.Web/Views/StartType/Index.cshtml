@model IEnumerable<FlightJournal.Web.Models.StartType>

@{
    ViewBag.Title = "Starttype administration";
}

<h2>Starttype administration</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover table-condensed">
    <tr>
        <th>
            ShortName
        </th>
        <th>
            ShortName (Localized)
        </th>
        <th>
            Name
        </th>
        <th>
            Name (Localized)
        </th>
        <th>
            Club
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ShortName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LocalizedShortName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LocalizedDisplayName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Club.ShortName)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.StartTypeId }) |
        @Html.ActionLink("Details", "Details", new { id = item.StartTypeId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.StartTypeId })
    </td>
</tr>
    }

</table>
